<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TaskModule3.Views.ResetPassword"
        Title="Смена пароля">
    
    <StackPanel>
        <Label VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Margin="0, 10, 0, 0"
               FontSize="24"
        >Смена пароля</Label>
        <TextBox x:Name="OldPassword" Width="120" Height="20" Margin="0, 10, 0, 0"></TextBox>
        <TextBox x:Name="NewPassword" PasswordChar="*" Width="120" Height="20" Margin="0, 10, 0, 0"></TextBox>
        <TextBox x:Name="RepeatPassword" PasswordChar="*" Width="120" Height="20" Margin="0, 10, 0, 0"></TextBox>
        <Button Margin="0, 10, 0, 0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="150" Click="ResetPasswordButton">Изменить пароль</Button>
    </StackPanel>
</Window>
